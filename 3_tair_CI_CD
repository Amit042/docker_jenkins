pipeline {
  agent none

  stages {
    stage("front end test") {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh "node --version"
      }
    }

    stage("backend test") {
      agent {
        docker { image 'python:3.10' }
      }
      steps {
        sh "python --version"
      }
    }

    stage("database test") {
      agent {
        docker { image 'mysql:8' }
      }
      steps {
        // mysql client may not be present in the image
        sh "mysql --version || echo 'MySQL client not found in image'"
      }
    }
  }
}
     

   
 
